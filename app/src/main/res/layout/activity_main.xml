<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!--  Display Portion  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/display"

        android:padding="10dp">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="Display Here"
            android:textColor="@color/black"
            android:maxLength="15"
            android:textSize="45sp"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />
    </LinearLayout>

<!--    Input Portion    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <!--Row 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="7"
                android:id="@+id/key7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="7"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="8"
                android:id="@+id/key8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="8"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="9"
                android:id="@+id/key9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="9"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="/"
                android:id="@+id/keyDivide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="/"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onSymbol"
                />



        </LinearLayout>
        <!--Row 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="4"
                android:id="@+id/key4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="4"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="5"
                android:id="@+id/key5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="5"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="6"
                android:id="@+id/key6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="6"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="x"
                android:id="@+id/keyMultiply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="X"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onSymbol"
                />



        </LinearLayout>
        <!--Row 3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="1"
                android:id="@+id/key1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="1"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="2"
                android:id="@+id/key2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="2"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="3"
                android:id="@+id/key3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="3"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="-"
                android:id="@+id/keySub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="-"
                android:textSize="65sp"
                android:background="@color/btnclr"
                android:onClick="onSymbol"
                />



        </LinearLayout>
        <!--Row 4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="."
                android:id="@+id/keyDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="."
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDecimal"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="0"
                android:id="@+id/key0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="0"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="onDigit"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/keyClr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="C"
                android:textSize="@dimen/fontsz"
                android:background="@color/btnclr"
                android:onClick="clearDisplay"
                />
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="+"
                android:id="@+id/keyAdd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="+"
                android:textSize="40sp"
                android:background="@color/btnclr"
                android:onClick="onSymbol"
                />



        </LinearLayout>
        <!--Row 5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:tag="="
                android:id="@+id/keyEquals"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btngap"
                android:text="="
                android:textSize="40sp"
                android:background="@color/btnclr"
                android:onClick="onEquals"
                />




        </LinearLayout>


    </LinearLayout>


</LinearLayout>